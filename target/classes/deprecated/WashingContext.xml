<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true"
>

    <bean id="wash" class="washing.Washing" depends-on="washLister"/>
    <bean id="bath" class="washing.Bath">
        <property name="time" value="#{time.addTime(30)}"/>
        <property name="appeal" value="3"/>
    </bean>
    <bean id="hair" class="washing.Hair">
        <property name="time" value="#{time.addTime(15)}"/>
        <property name="appeal" value="1"/>
    </bean>
    <bean id="nails" class="washing.Nails">
        <property name="time" value="#{time.addTime(15)}"/>
        <property name="appeal" value="1"/>
    </bean>
    <bean id="shower" class="washing.Shower">
        <property name="time" value="#{time.addTime(30)}"/>
        <property name="appeal" value="2"/>
    </bean>
    <bean id="teeth" class="washing.Teeth">
        <property name="time" value="#{time.addTime(15)}"/>
        <property name="appeal" value="1"/>
    </bean>
    <bean id="washLister" class="washing.WashLister" init-method="showWashList" scope="prototype">
        <property name="washList">
            <list>
                <ref bean="bath"/>
                <ref bean="hair"/>
                <ref bean="nails"/>
                <ref bean="shower"/>
                <ref bean="teeth"/>
            </list>
        </property>
    </bean>
    <bean id="washList" class="java.util.ArrayList" scope="prototype"/>
</beans>